# Transport Configuration
TRANSPORT=stdio  # Options: stdio (local), sse (remote)

# Database Configuration
DB_TYPE=local    # Options: local, cloud
DB_HOST=localhost
DB_PORT=5432
DB_NAME=congo_river
DB_USER=postgres
DB_PASSWORD=

# Cloud Database (if DB_TYPE=cloud)
CLOUD_DB_URL=postgresql://user:pass@host:port/dbname

# LLM Integration (for neuro-symbolic features)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Vector Database
VECTOR_DIM=384   # sentence-transformers default dimension

# Language Selection System
AUTO_SELECT_LANGUAGE=true
ALLOW_MANUAL_OVERRIDE=true

# Performance & Caching
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
MAX_CACHE_SIZE_MB=100

# Python Services
PYTHON_EXECUTABLE=python3
PYTHON_SERVICE_TIMEOUT_MS=30000

# Logging
LOG_LEVEL=info   # Options: debug, info, warn, error
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/congo-river.log

# SSE Server (if TRANSPORT=sse)
SSE_PORT=3000
SSE_HOST=0.0.0.0
SSE_PATH=/mcp
