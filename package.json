{
  "name": "congo-river-mcp",
  "version": "1.0.0",
  "description": "Congo River Compositional Intelligence MCP Server - Neuro-symbolic reasoning tools for compositional intelligence",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/server.js",
    "start:sse": "TRANSPORT=sse node dist/server.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "yago:download": "bash scripts/download-yago.sh",
    "yago:import": "npm run build && node dist/scripts/import-yago.js",
    "yago:import:dry-run": "npm run build && node dist/scripts/import-yago.js --dry-run",
    "yago:setup": "bash scripts/create-sample-yago.sh && npm run yago:import"
  },
  "keywords": [
    "mcp",
    "compositional-intelligence",
    "neuro-symbolic",
    "reasoning",
    "knowledge-graph",
    "rdf",
    "semantic-web",
    "proof-search",
    "lambda-calculus"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "pg": "^8.13.1",
    "uuid": "^11.0.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
